<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record id="shufflestuff_products_action" model="ir.actions.act_window">
        <field name="name">Products</field>
        <field name="res_model">shufflestuff.products</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No products to show!
            </p>
        </field>
    </record>

    <!-- Product List View -->
    <record id="shufflestuff_products_view_list" model="ir.ui.view">
        <field name="name">Products</field>
        <field name="model">shufflestuff.products</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="Products">
                <field name="name"/>
                <field name="customer_id"/>
                <field name="quality"/>
                <field name="usage"/>
                <field name="status"/>
                <field name="category_id"/>
            </tree>
        </field>
    </record>

    <record id="shufflestuff_products_view_form" model="ir.ui.view">
        <field name="name">ShuffleStuff Products</field>
        <field name="model">shufflestuff.products</field>
        <field name="arch" type="xml">
            <form string="Channel">
                <sheet>
                    
                        <field name="image" nolabel='1' widget="image" class="oe_avatar"/>
                        <label for="name" string="Product Name"/>
                        <h1><field name="name" placeholder="New Product"/></h1>
                        <group col="2">
                            <group>
                                <field name="customer_id"/>
                                <field name="customer_mobile"/>
                            </group>
                            <group>
                                <field name="date"/>
                            </group>
                        </group>
                  
                    <notebook>
                        <page string="Product Details">
                            <group col='2'>
                                <group>
                                    <field name="brand"/>
                                    <field name="category_id"/>
                                    <field name="description"/>
                                </group>
                                <group>
                                    <field name="tag_id" widget="many2many_tags" nolabel="1" placeholder="Product Tags" class="oe_inline" colspan="2"/>
                                    <field name="price"/>
                                </group>
                            </group>
                        </page>
                        <page string="Product Condition">
                            <group>
                                <field name="quality"/>
                                <button type="object" string="A1" name="icon1_i" icon="fa-star-o" attrs="{'invisible':[('icon_1visi','=',False)]}"/>
                                <button type="object" string="A1" name="icon1_v" icon="fa-star" attrs="{'invisible':[('icon_1visi','=',True)]}"/>
                                <button type="object" string="A2" name="icon2_i" icon="fa-star-o" attrs="{'invisible':[('icon_1visi','=',False)]}"/>
                                <button type="object" string="A2" name="icon2_v" icon="fa-star" attrs="{'invisible':[('icon_1visi','=',True)]}"/>
                                <button type="object" string="A3" name="icon3_i" icon="fa-star-o" attrs="{'invisible':[('icon_1visi','=',False)]}"/>
                                <button type="object" string="A3" name="icon3_v" icon="fa-star" attrs="{'invisible':[('icon_1visi','=',True)]}"/>
                                <button type="object" string="A4" name="icon4_i" icon="fa-star-o" attrs="{'invisible':[('icon_1visi','=',False)]}"/>
                                <button type="object" string="A4" name="icon4_v" icon="fa-star" attrs="{'invisible':[('icon_1visi','=',True)]}"/>
                                <button type="object" string="A5" name="icon5_i" icon="fa-star-o" attrs="{'invisible':[('icon_1visi','=',False)]}"/>
                                <button type="object" string="A5" name="icon5_v" icon="fa-star" attrs="{'invisible':[('icon_1visi','=',True)]}"/><br/>
                                <field name="icon_1visi" invisible="1"/>

                                <field name="usage"/>
                                <field name="status"/>
                            </group>
                        </page>
                        <page string="Product Owner">
                            <group>
                                <field name="mobile"/>
                                <field name="email"/>
                                <field name="country"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    


    </odoo>
